@model EmployeeEditViewModel
@*@inject IEmployeeRepository _employeeRepository*@
@{
    ViewBag.Title = "Edit Employee";
    var PhotoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noImage.png");
}
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" class="mt-3" method="post">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control">
                    <option value="">Select Department </option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input  asp-for="Photos" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click here to change photo...</label>
                </div>
                <span asp-validation-for="Photos" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row col-sm-4 offset-4">
            <img src="@PhotoPath" class="imageThumpnail" asp-append-version="true" />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="EmployeeList" class="btn btn-primary">Cancel</a>
        </div>

        @*<div class="form-group row">
            <span>Total Employee Count IS: @_employeeRepository.GetAllEmployees().Count()</span>
        </div>*@
        @section Scripts    {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on('change', function () {
                        var fileName = $(this).val().split('\\').pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
    </form>
