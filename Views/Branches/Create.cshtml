@model Branch

@{
    ViewBag.Title = "Create Branch";
}


<form method="post" class="mt-3">
    <div class="card mt-3">
        <div class="card-header card-title text-center"><h5>Add New Branch</h5></div>
        <div class="card-body ">

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Code-addon">Code</span>
                <input asp-for="Code" class="form-control col-sm-10" placeholder="Code" aria-describedby="Code-addon" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Name-addon">Name</span>
                <input asp-for="Name" class="form-control col-sm-10" placeholder="Name" aria-describedby="Name-addon" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Phone-addon">Phone</span>
                <input asp-for="Phone" class="form-control col-sm-4" placeholder="Phone" aria-describedby="Phone-addon" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Mobile-addon">Mobile</span>
                <input asp-for="Mobile" class="form-control col-sm-4" placeholder="Mobile" aria-describedby="Mobile-addon" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Address-addon">Address</span>
                <input asp-for="Address" class="form-control col-sm-10" placeholder="Address" aria-describedby="Address-addon" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>






            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-outline-primary" style="width:auto;"><i class="fa fa-save"></i> Create</button>
            <a asp-controller="Branches" asp-action="ListBranches" style="width:auto" class="btn btn-outline-danger"><i class="fa fa-times "></i> Cancel</a>
        </div>
    </div>

</form>
