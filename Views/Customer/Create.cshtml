@model Customer
@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>

<form method="post" class="mt-3">
    <div class="card mt-3">
        <div class="card-header card-title text-center"><h5>Add New Customer</h5></div>
        <div class="card-body ">

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="CustomerName-addon">Customer Name</span>
                <input asp-for="CustomerName" class="form-control col-sm-10" placeholder="Customer Name" aria-describedby="CustomerName-addon" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="MobileNo-addon">Mobile No</span>
                <input asp-for="MobileNo" class="form-control col-sm-10" placeholder="Mobile No" aria-describedby="MobileNo-addon" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Email-addon">Email</span>
                <input asp-for="Email" class="form-control col-sm-10" placeholder="Email" aria-describedby="Email-addon" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Address-addon">Address</span>
                <input asp-for="Address" class="form-control col-sm-10" placeholder="Address" aria-describedby="Address-addon" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="OtherInformation-addon">More Information</span>
                <input asp-for="OtherInformation" class="form-control col-sm-10" placeholder="More Information" aria-describedby="OtherInformation-addon" />
                <span asp-validation-for="OtherInformation" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-outline-primary" style="width:auto"><i class="fa fa-save"> Save </i></button>
            <a asp-controller="Customer" asp-action="ListCustomers" style="width:auto" class="btn btn-outline-danger"><i class="fa fa-times "></i> Cancel</a>
        </div>
    </div>

</form>
@section Scripts{
    <script>
            $(window).ready(function () {
                $('#mnuTMS').removeClass('collapse show');
                $('#mnuSettings').addClass('collapse show');
                $('#mnuTMS').addClass('collapse hide');
            });
    </script>
}