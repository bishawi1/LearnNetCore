@model Supplier
@{
    ViewData["Title"] = "Edit";
}


<form method="post" class="mt-3">
    <div class="card mt-3">
        <div class="card-header card-title text-center"><h5>Edit Supplier Data</h5></div>
        <div class="card-body ">
            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="taskSubject-addon">Id</span>
                <input asp-for="Id" class="form-control col-sm-2" disabled placeholder="Id" aria-describedby="Id-addon" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="SupplierName-addon">Name</span>
                <input asp-for="SupplierName" class="form-control col-sm-10" placeholder="Id" aria-describedby="SupplierName-addon" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="MobileNo-addon">Mobile No</span>
                <input asp-for="MobileNo" class="form-control col-sm-2" placeholder="Mobile No" aria-describedby="MobileNo-addon" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="MobileNo-addon">Phone No</span>
                <input asp-for="Phone" class="form-control col-sm-2" placeholder="Phone No" aria-describedby="Phone-addon" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Fax-addon">Fax No</span>
                <input asp-for="Fax" class="form-control col-sm-2" placeholder="Fax No" aria-describedby="Fax-addon" />
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Email-addon">Email</span>
                <input asp-for="Email" class="form-control col-sm-10" placeholder="Email" aria-describedby="Email-addon" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Address-addon">Address</span>
                <input asp-for="Address" class="form-control col-sm-10" placeholder="Address" aria-describedby="Address-addon" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="OtherInformation-addon">More Information</span>
                <input asp-for="OtherInformation" class="form-control col-sm-10" placeholder="OtherInformation" aria-describedby="OtherInformation-addon" />
                <span asp-validation-for="OtherInformation" class="text-danger"></span>
            </div>


            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-outline-primary" style="width:auto;"><i class="fa fa-save"></i> Save</button>
            <a asp-action="ListSuppliers" asp-controller="Suppliers" class="btn btn-outline-danger ml-2" style="width:auto;"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    <script>
            $(window).ready(function () {
                $('#mnuTMS').removeClass('collapse show');
                $('#mnuSettings').addClass('collapse show');
                $('#mnuTMS').addClass('collapse hide');
            });
    </script>
}