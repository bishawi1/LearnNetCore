@model List<Supplier>
@{
    ViewData["Title"] = "ListCustomers";
}

<h3 class="text-center">List of Suppliers</h3>
<a class="btn btn-outline-primary mb-3" style="width:auto" asp-action="Create" asp-controller="Suppliers"><i class="fa fa-plus-circle"></i></a>
<div style="border:solid 1px black; padding:3px;">
    <table class="table table-hover gridtable" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Addresss</th>
                <th>MobileNo</th>
                <th>phone</th>
                <th>Fax</th>
                <th>Email</th>
                <th style="width:30px;"></th>
                <th style="width:30px;"></th>

            </tr>
        </thead>
        @foreach (var supplier in Model)
        {
    <tr>
        <td>@supplier.SupplierName</td>
        <td>@supplier.Address</td>
        <td>@supplier.MobileNo</td>
        <td>@supplier.Phone</td>
        <td>@supplier.Fax</td>
        <td>@supplier.Email</td>
        <td><a class="btn btn-outline-primary btn-sm rounded-circle" asp-action="Details" asp-controller="Suppliers" asp-route-Id="@supplier.Id" style="width:auto"><i class="fa fa-eye"></i></a></td>
        <td>
            <form asp-action="DeleteSupplier" asp-route-Id="@supplier.Id" method="post">
                <span id="confirmDeleteSpan_@supplier.Id" style="display:none">
                    <span>Are you sure you want to delete?</span>
                    <button type="submit" class="btn btn-danger"><i class="fa fa-check-circle"></i>Yes</button>
                    <a href="#" class="btn btn-primary"
                       onclick="confirmDelete('@supplier.Id',false)"><i class="fa fa-times-circle"></i> No</a>
                </span>
                <span id="deleteSpan_@supplier.Id">
                    <a href="#" class="btn btn-outline-danger  btn-sm rounded-circle" style="width:auto"
                       onclick="confirmDelete('@supplier.Id',true)"><i class="fa fa-trash"></i></a>
                </span>
                @*<button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to Delete User : @user.UserName')">
                    Delete
                </button>*@

            </form>
        </td>
    </tr>
        }
    </table>
</div>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}