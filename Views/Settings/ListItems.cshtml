@model List<ItemDetailsViewModels>
@{
    ViewData["Title"] = "Item List";
}

<h3 class="text-center">List of Items</h3>
<a class="btn btn-outline-primary mb-3" style="width:auto" asp-action="CreateItem" asp-controller="Settings"><i class="fa fa-plus-circle"></i></a>
<div style="border:solid 1px black; padding:3px;">
    <table class="table table-hover gridtable" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Main Item</th>
                <th>Item Unit</th>
                <th>Currency</th>
                <th>Price</th>
                <th>Other Information</th>
                <th style="width:30px;"></th>
                <th style="width:30px;"></th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ItemName</td>
                <td>@item.MainItemName</td>
                <td>@item.ItemUnitName</td>
                <td>@item.CurrencyName</td>
                <td>@item.UnitPrice</td>
                <td>@item.OtherInformation</td>
                <td><a class="btn btn-outline-primary btn-sm rounded-circle" asp-action="ItemDetails" asp-controller="Settings" asp-route-Id="@item.Id" style="width:auto"><i class="fa fa-eye"></i></a></td>
                <td>
                    <form asp-action="DeleteSupplier" asp-route-Id="@item.Id" method="post">
                        <span id="confirmDeleteSpan_@item.Id" style="display:none">
                            <span>Are you sure you want to delete?</span>
                            <button type="submit" class="btn btn-danger"><i class="fa fa-check-circle"></i>Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@item.Id',false)"><i class="fa fa-times-circle"></i> No</a>
                        </span>
                        <span id="deleteSpan_@item.Id">
                            <a href="#" class="btn btn-outline-danger  btn-sm rounded-circle" style="width:auto"
                               onclick="confirmDelete('@item.Id',true)"><i class="fa fa-trash"></i></a>
                        </span>
                        @*<button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to Delete User : @user.UserName')">
                                Delete
                            </button>*@

                    </form>
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}