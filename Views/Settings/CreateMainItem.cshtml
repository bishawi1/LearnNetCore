@model MainItemViewModel
@{
    ViewBag.Title = "Create";
}

<h1>Create</h1>

<form method="post" class="mt-3">
    <div class="card mt-3">
        <div class="card-header card-title text-center"><h5>Add New Main Item</h5></div>
        <div class="card-body ">

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="MainItemName-addon">Name</span>
                <input asp-for="MainItemName" class="form-control col-sm-10" placeholder="Name" aria-describedby="MainItemName-addon" />
                <span asp-validation-for="MainItemName" class="text-danger"></span>
            </div>
            <div class="input-group  mt-1 row col-sm-12">
                <span class="input-group-text col-sm-2 col-form-label">Item Category</span>
                @Html.DropDownListFor(x => Model.ItemCategoryId, new SelectList(Model.ItemCategories, "Id", "CategoryName"), new { @class = "form-control" })
                <span asp-validation-for="ItemCategoryId" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="OtherInformation-addon">Other Information</span>
                <input asp-for="OtherInformation" class="form-control col-sm-10" placeholder="Other Information" aria-describedby="OtherInformation-addon" />
                <span asp-validation-for="OtherInformation" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-outline-primary" style="width:auto"><i class="fa fa-save"> Save </i></button>
            <a asp-controller="Settings" asp-action="ListItemCategory" style="width:auto" class="btn btn-outline-danger"><i class="fa fa-times "></i> Cancel</a>
        </div>
    </div>

</form>
@section Scripts{
    <script>
            $(window).ready(function () {
                $('#mnuTMS').removeClass('collapse show');
                $('#mnuSettings').addClass('collapse show');
                $('#mnuTMS').addClass('collapse hide');
            });
    </script>
}