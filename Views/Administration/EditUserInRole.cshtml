@model List<UserRoleViewModel>;

@{
    var roleID = ViewBag.roleId;
    ViewData["Title"] = "EditUserInRole";
}

<h1>EditUserInRole</h1>

<form  method="post" >
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Add or Remove User From Role</h2>
        </div>
        <div class="card-body">
            @for( int i =0 ; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserID" />
                <input hidden asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[0].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto"/>
            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@roleID" class="btn btn-primary" style="width:auto">cancel</a>
        </div>
    </div>
</form>