@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<div class="card">
    <div class="card-header">
        <div class="flex-container text-center">
            <span class="col-11"><h5> Roles List</h5></span>
            <a class="btn btn-secondary" style="width:auto" asp-action="CreateRole" asp-controller="Administration">
                <i class="fa fa-plus-circle"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {




            <div style=" border:solid 1px black; padding:3px;">
                <table class="table table-hover" id="myTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th style="width:30px;"></th>
                            <th style="width:30px;"></th>

                        </tr>
                    </thead>



                    @foreach (var role in Model)
                    {

                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>

                            <td><a class="btn btn-outline-primary btn-sm rounded-circle " style="width:auto" asp-action="EditRole" asp-controller="Administration" asp-route-Id="@role.Id"><i class="fa fa-edit"></i></a></td>
                            <td>

                                @{
                                    if (role.Name.ToLower() != "admin")
                                    {


                                        //if (User.IsInRole("Admin") || (User.Identity.Name == @task.TaskOwnerUserName))
                                        //{
                                    <form asp-action="DeleteRole" asp-route-Id="@role.Id" method="post">
                                        <span id="confirmDeleteSpan_@role.Id" style="display:none">
                                            <span>Are you sure you want to delete?</span>
                                            <button type="submit" class="btn btn-danger"><i class="fa fa-check-circle"></i>Yes</button>
                                            <a href="#" class="btn btn-primary"
                                               onclick="confirmDelete('@role.Id',false)"><i class="fa fa-times-circle"></i> No</a>
                                        </span>
                                        <span id="deleteSpan_@role.Id">
                                            <a href="#" class="btn btn-outline-danger rounded-circle btn-sm" style="width:auto"
                                               onclick="confirmDelete('@role.Id',true)"><i class="fa fa-trash"></i></a>
                                        </span>

                                    </form>
                                    }
                                }
                            </td>
                        </tr>

                    }


                </table>
            </div>
        }
    </div>
</div>


@section Scripts{
    <script src="~/js/CustomScript.js"></script>
}


