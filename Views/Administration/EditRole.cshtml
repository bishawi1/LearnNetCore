@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
            <div class="col-sm-10">
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3> Users in this Role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">not at the moment</h5>
            }

        </div>
        <div class="card-footer">
            <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-RoleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or Remove Users</a>
        </div>
    </div>
</form>