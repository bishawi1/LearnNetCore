@model List<EmployeesInTaskViewModel>
@{
    var TaskID = ViewBag.TaskId;
    ViewBag.Title = "Edit Employee In Task";
}

<h1>Edit Employee In Task</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Add or Remove employee From Task</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].EmployeeId" />
                <input hidden asp-for="@Model[i].Id" />
                <input hidden asp-for="@Model[i].TaskId" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[0].IsSelected">
                    @Model[i].EmployeeName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="Details" asp-controller="Tasks" asp-route-id="@TaskID" class="btn btn-primary" style="width:auto">cancel</a>
        </div>
    </div>
</form>