@model List<EmployeesInTaskViewModel>
@{
    var TaskID = ViewBag.TaskId;
    ViewBag.Title = "Edit Employee In Task";
}


<form method="post">
    <div class="card mt-3">
        <div class="card-header">
            <h3 class="card-title text-center">assign employee to Task</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].EmployeeId" />
                <input hidden asp-for="@Model[i].Id" />
                <input hidden asp-for="@Model[i].TaskId" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[0].IsSelected">
                    @Model[i].EmployeeName
                </label>
            </div>
            }
        </div>
        <div class="card-footer text-center">
            <button type="submit"  class="btn btn-outline-primary" style="width:auto" ><i class="fa fa-save"></i> Save</button>
            <a asp-action="Details" asp-controller="Tasks" asp-route-id="@TaskID" class="btn btn-outline-danger" style="width:auto"><i class="fa fa-times"></i> cancel</a>
        </div>
    </div>
</form>