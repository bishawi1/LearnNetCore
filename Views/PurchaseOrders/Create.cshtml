                $(document).ready(function () {
                    $('.chosen').chosen();
                    //$('#SupplierId').select2();
                    //$('#EmployeeId').select2();
                    //$('#ProjectId').select2();
                    //$('#BranchId').select2();


                    $('#createPurchaseOrder').ajaxForm({
                        beforeSubmit: validate,
                        success: function (response) {
                            window.location.href = "/PurchaseOrders/Edit/" + response;
                        }
                    });

                    //$('#createPurchaseOrder').ajaxForm({
                    //    beforeSubmit: validate
