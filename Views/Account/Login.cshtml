@model LoginViewModel
@{ 
    ViewBag.Title = "User Login";
}
<br /><br /><br />
<div class="row justify-content-center">
    <div class="col-md-12 " style="justify-content:center;display:flex;">
        <form method="post">

            <div class="card ">
                <div class="card-header">
                    <span class="card-title text-sm-center"><h3>Login</h3></span> 
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group">
                        <span class="input-group-text col-sm-4" id="userName-addon1">User Name</span>
                        <input asp-for="Email" class="form-control col-sm-8" placeholder="User Name" aria-label="Email" aria-describedby="userName-addon1" />
                        @*<div class="input-group col-sm-4">
                            <span asp-validation-for="Email" class="text-danger "></span>
                        </div>*@
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-text col-sm-4" id="password-addon">Password</span>
                        <input asp-for="Password" class="form-control col-sm-8" placeholder="Password" aria-label="Password" aria-describedby="password-addon" />
                        @*<div class="input-group col-sm-4">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>*@
                    </div>
                    <div class="form-group">
                        <br />
                        <div class="Checkbox text-center">
                            @*<label asp-for="RememberMe"></label>*@
                            <input  type="checkbox" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-outline-dark" style="width:auto"><i class="fa fa-sign-in-alt"></i> Login</button>
                </div>
            </div>
        </form>
    </div>

</div>