@model IEnumerable<Employee>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";
}
     <h3 class="text-center card-title" >List of Employees</h3>
<div class="mt-3">
    <a class="btn btn-outline-primary mb-3 fa fa-plus-circle" style="width:auto" asp-action="create" asp-controller="home"></a>
</div>

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var PhotoPath = "~/images/" + (employee.PhotoPath ?? "noImage.png");
        <div class="card m-2" style="min-width:18rem;max-width:30.5%;">
            <div class="card-header text-center">
                <span class="card-title"><h5> @employee.Name</h5></span>
            </div>
            <img asp-append-version="true" class="card-img-top imageThumpnail" src="@PhotoPath" />
            <div class="card-footer text-center">
                @*@Html.ActionLink("View","Details","Home",new  { Id=employee.Id})*@
                <a asp-controller="home" asp-action="details" asp-route-Id="@employee.Id" class="btn btn-outline-primary m-1" style="width:auto;"><i class="fa fa-eye"></i> View</a>
                @*<a href=@Url.Action("Details","Home",new { Id=employee.Id}) class="btn btn-primary">View</a>*@
                @*<a href="/Home/Details/@employee.Id" class="btn btn-primary">View</a>*@
                <a asp-controller="home" asp-action="edit" asp-route-Id="@employee.Id" class="btn btn-outline-primary m-1" style="width:auto;"><i class="fa fa-edit"></i> Edit</a>
                <a href="#" class="btn btn-danger m-1" hidden>Delete</a>
            </div>
        </div>
    }
</div>

