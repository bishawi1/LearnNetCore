@model EmployeeEditViewModel
@*@inject IEmployeeRepository _employeeRepository*@
@{
    ViewBag.Title = "Edit Employee";
    var PhotoPath = "";
    if (Model.ExistingPhotoPath == null)
    {
        PhotoPath = "~/images/" + "noImage.png";
    }
    else
    {
        PhotoPath = "~/images/" + (Model.ExistingPhotoPath);

    }
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" class="mt-3" method="post">
    <div class="card mt-3">
        <div class="card-header card-title text-center"><h5>Edit Employee Data</h5></div>
        <div class="card-body ">
            <input hidden asp-for="Id" />
            <input hidden asp-for="ExistingPhotoPath" />

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="EmployeeNo-addon">No</span>
                <input asp-for="EmployeeNo" class="form-control col-sm-2" placeholder="Employee No" aria-describedby="EmployeeNo-addon" />
                <span asp-validation-for="EmployeeNo" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="taskSubject-addon">Name</span>
                <input asp-for="Name" class="form-control col-sm-10" placeholder="EMployee Name" aria-describedby="taskSubject-addon" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="IdentityNo-addon">Identity No</span>
                <input asp-for="IdentityNo" class="form-control col-sm-10" placeholder="Identity No" aria-describedby="IdentityNo-addon" />
                <span asp-validation-for="IdentityNo" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="EducationDegree-addon">Education Degree</span>
                <input asp-for="EducationDegree" class="form-control col-sm-8" placeholder="Education Degree" aria-describedby="EducationDegree-addon" />
                <span asp-validation-for="EducationDegree" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Specialization-addon">Specialization</span>
                <input asp-for="Specialization" class="form-control col-sm-8" placeholder="Specialization" aria-describedby="Specialization-addon" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Email-addon">Email</span>
                <input asp-for="Email" class="form-control col-sm-8" placeholder="Email" aria-describedby="Email-addon" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="Specialization-addon">MobileNo</span>
                <input asp-for="MobileNo" class="form-control col-sm-8" placeholder="MobileNo" aria-describedby="MobileNo-addon" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>


            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="WorkMobileNo-addon">WorkMobileNo</span>
                <input asp-for="WorkMobileNo" class="form-control col-sm-8" placeholder="WorkMobileNo" aria-describedby="WorkMobileNo-addon" />
                <span asp-validation-for="WorkMobileNo" class="text-danger"></span>
            </div>
            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="PhoneNo-addon">Phone No</span>
                <input asp-for="PhoneNo" class="form-control col-sm-8" placeholder="Phone No" aria-describedby="PhoneNo-addon" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="PhoneNo-addon">Job Description</span>
                <input asp-for="JobDescription" class="form-control col-sm-8" placeholder="Job Description" aria-describedby="JobDescription-addon" />
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <div class="input-group col-sm-12 mt-1 row ">
                <span class="input-group-text col-sm-2 " id="OtherInformation-addon">More Information</span>
                <input asp-for="OtherInformation" class="form-control col-sm-10" placeholder="More Information" aria-describedby="OtherInformation-addon" />
                <span asp-validation-for="OtherInformation" class="text-danger"></span>
            </div>

            @*<div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-control">
                    <option value="">Select Department </option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>

            </div>
        </div>*@
            <div class="input-group col-sm-12 mt-1 row">
                <span class="input-group-text col-sm-2 " id="ExistingPhotoPath-addon">Photo</span>
                <div class="custom-file">
                    <input asp-for="Photos" class="form-control custom-file-input" aria-describedby="Photos-addon" />
                    <label class="custom-file-label">Click here to change photo...</label>
                </div>
                @*<span asp-validation-for="ExistingPhotoPath" class="text-danger"></span>*@
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row col-sm-4 offset-4">
                <img src="@PhotoPath" class="imageThumpnail" asp-append-version="true" />
            </div>

            @*<div class="form-group row">
            <span>Total Employee Count IS: @_employeeRepository.GetAllEmployees().Count()</span>
        </div>*@
        </div>
        <div class="card-footer mr-3 text-center">
            <button type="submit" class="btn btn-outline-primary" style="width:auto"><i class="fa fa-save"></i> Save</button>
            <a asp-controller="home" asp-action="EmployeeList" style="width:auto" class="btn btn-outline-danger"><i class="fa fa-times"></i> Cancel</a>
        </div>
    </div>

</form>

@section Scripts    {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on('change', function () {
                //console.log($(this));
                var fileLable = $(this).next('.custom-file-label');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    fileLable.html(files.length + ' files selected');
                } else if (files.length == 1) {
                    fileLable.html(files[0].name);
                }
                //                    var fileName = $(this).val().split('\\').pop();
                //                    $(this).next('.custom-file-label').html(fileName);
            });
        });


        $(window).ready(function () {
            $('#mnuTMS').removeClass('collapse show');
            $('#mnuSettings').addClass('collapse show');
            $('#mnuTMS').addClass('collapse hide');
        });
    </script>
}

